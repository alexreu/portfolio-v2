{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "ES2017",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "next.config.js",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
